{% block title %}Media{% endblock %}

{% block body %}
<div class="container">
    <h1>Media</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medium.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ medium.type }}</td>
            </tr>
            <tr>
                <th>Path</th>
