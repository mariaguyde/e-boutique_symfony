{% extends 'base.html.twig' %}

{% block title %}Winnie's desk - Catégorie {{ category.name }}{% endblock %}

{% block body %}
<div class="container">

    <h1>Categorie - {{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant </th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom de la catégorie </th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description </th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">Retour à la liste des catégorie</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier la catégorie</a>

    {{ include('category/_delete_form.html.twig') }}
</div>
{% endblock %}
