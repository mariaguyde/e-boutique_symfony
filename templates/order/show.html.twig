{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>OrderNumber</th>
                <td>{{ order.orderNumber }}</td>
            </tr>
            <tr>
                <th>Valid</th>
                <td>{{ order.valid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateTime</th>
                <td>{{ order.dateTime ? order.dateTime|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index') }}">back to list</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
